<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dataform"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="crazyfour.hackisu.isu.edu.momento.activities.CreateEventActivity">

    <TextView
        android:id="@+id/event_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name :"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/event_desc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Event Description :"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/event_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/event_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Event Time :"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/setTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#ff3377"
        android:paddingBottom="5sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:paddingTop="5sp"
        android:text="Set Time"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:background="#ff3377"
        android:paddingBottom="5sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:textSize="15sp"
        android:paddingTop="5sp"
        android:text="Save"
        android:textColor="@color/white" />
</LinearLayout>
