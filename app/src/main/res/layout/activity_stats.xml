<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_chart"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="crazyfour.hackisu.isu.edu.momento.activities.StatsActivity">

    <TextView
        android:id="@+id/activity_details_desc_label"
        android:text="Most Phone Calls To :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:id="@+id/activity_details_desc"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Dad"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_details_date_label"
        android:text="Most Coversations With :"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        />

    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:id="@+id/activity_details_date"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/activity_details_notes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="Most Frequent Locations you were at :"/>


</LinearLayout>
